<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/school"
        layout_constraintBaseline_toBaselineOf="@+id/bookname"
        layout_constraintBottom_toTopOf="@+id/bookname"
        layout_constraintEnd_toEndOf="@+id/button"
        layout_constraintStart_toStartOf="parent"
        layout_constraintTop_toTopOf="parent"
        android:layout_width="385dp"
        android:layout_height="45dp"
        android:hint="학교 이름"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="11dp" />

    <EditText
        android:id="@+id/bookname"
        layout_constraintBottom_toTopOf="@+id/local"
        layout_constraintEnd_toEndOf="@+id/school"
        layout_constraintStart_toStartOf="parent"
        layout_constraintTop_toBottomOf="@+id/school"
        layout_constraintTop_toTopOf="@+id/local"
        android:layout_width="385dp"
        android:layout_height="45dp"
        android:hint="책 이름"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="56dp" />

    <Spinner
        android:id="@+id/local"
        layout_constraintBottom_toTopOf="parent"
        layout_constraintEnd_toEndOf="parent"
        layout_constraintEnd_toStartOf="parent"
        layout_constraintStart_toStartOf="parent"
        layout_constraintTop_toBottomOf="@+id/bookname"
        layout_constraintTop_toTopOf="parent"
        android:layout_width="385dp"
        android:layout_height="45dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/button"
        layout_constraintBottom_toTopOf="@+id/textview"
        layout_constraintEnd_toEndOf="parent"
        layout_constraintStart_toStartOf="@+id/local"
        layout_constraintTop_toBottomOf="@+id/local"
        layout_constraintTop_toTopOf="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="입력"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="167dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mRecyclerView"
        android:layout_width="385dp"
        android:layout_height="441dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="277dp"
        layout_constraintBottom_toTopOf="@+id/mRecyclerView"
        layout_constraintEnd_toEndOf="parent"
        layout_constraintStart_toStartOf="@+id/school"
        layout_constraintTop_toBottomOf="@+id/textview" >

        <TextView
            android:id="@+id/textview"
            layout_constraintBottom_toTopOf="@+id/mRecyclerView"
            layout_constraintEnd_toEndOf="parent"
            layout_constraintStart_toStartOf="@+id/school"
            layout_constraintTop_toBottomOf="@+id/button"
            layout_constraintTop_toTopOf="@+id/school"
            android:layout_width="374dp"
            android:layout_height="37dp"
            android:hint="출력"
            tools:layout_editor_absoluteX="6dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
